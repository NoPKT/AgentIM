{
  "name": "agentim-workspace",
  "version": "0.1.0",
  "private": true,
  "description": "Unified IM platform for managing and orchestrating multiple AI coding agents",
  "author": "NoPKT LLC",
  "license": "AGPL-3.0-only",
  "homepage": "https://github.com/NoPKT/AgentIM",
  "repository": {
    "type": "git",
    "url": "https://github.com/NoPKT/AgentIM.git"
  },
  "keywords": [
    "ai",
    "agent",
    "im",
    "chat",
    "claude",
    "codex",
    "gemini",
    "orchestration"
  ],
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "pnpm --filter @agentim/shared test && pnpm --filter agentim test && pnpm --filter @agentim/server test && pnpm --filter @agentim/web test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "turbo lint",
    "clean": "turbo clean"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "turbo": "^2.8.10",
    "typescript": "^5.8.0",
    "prettier": "^3.5.0"
  },
  "pnpm": {
    "overrides": {
      "glob>minimatch": "^10.2.2",
      "filelist>minimatch": "^10.2.2",
      "minimatch": "^10.2.2",
      "ajv": "^8.18.0",
      "esbuild": "^0.25.0"
    },
    "onlyBuiltDependencies": [
      "argon2",
      "esbuild"
    ]
  },
  "packageManager": "pnpm@10.29.3",
  "engines": {
    "node": ">=20"
  }
}
