# AgentIM Docker Configuration
# Copy this file to .env and fill in the values, or use deploy.sh to auto-generate.

# Required — generate with: openssl rand -base64 32
JWT_SECRET=
ENCRYPTION_KEY=

# Admin credentials (production requires 12+ chars with upper, lower, digit, and special char)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=

# PostgreSQL password (internal, not exposed to host)
POSTGRES_PASSWORD=

# Optional overrides
PORT=3000
NODE_ENV=production
CORS_ORIGIN=http://localhost:3000
# Set to "true" if running behind a reverse proxy (nginx, Caddy, Cloudflare Tunnel, etc.)
# Required for correct rate limiting — without this, all users share one rate limit bucket.
TRUST_PROXY=false
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Redis (optional — the server uses in-memory fallbacks when not set).
# Docker Compose auto-configures REDIS_URL; only override for external Redis.
# REDIS_URL=redis://redis:6379
