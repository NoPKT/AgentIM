{
  "name": "@agentim/server",
  "version": "0.1.0",
  "private": true,
  "license": "AGPL-3.0-only",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "node --import tsx --test --test-concurrency=1 test/*.test.ts",
    "test:coverage": "node --import tsx --experimental-test-coverage --test --test-concurrency=1 test/*.test.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/scripts/migrate.ts",
    "db:backup": "tsx src/scripts/backup.ts",
    "db:rollback": "echo 'See packages/server/MIGRATION_ROLLBACK.md for rollback instructions. Apply the relevant drizzle/rollback/*.sql file manually with: psql $DATABASE_URL -f packages/server/drizzle/rollback/<N>_rollback.sql'",
    "clean": "rm -rf dist .turbo",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "@agentim/shared": "workspace:*",
    "@aws-sdk/client-s3": "^3.996.0",
    "@hono/node-server": "^1.14.0",
    "@hono/node-ws": "^1.1.0",
    "argon2": "^0.41.0",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.12.2",
    "ioredis": "^5.4.0",
    "jose": "^6.0.0",
    "nanoid": "^5.1.0",
    "pg": "^8.13.0",
    "web-push": "^3.6.7",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/pg": "^8.11.0",
    "@types/web-push": "^3.6.4",
    "@types/ws": "^8.5.0",
    "drizzle-kit": "^0.31.0",
    "tsx": "^4.19.0",
    "typescript": "^5.8.0"
  }
}
