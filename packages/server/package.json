{
  "name": "@agentim/server",
  "version": "0.1.0",
  "private": true,
  "license": "AGPL-3.0-only",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "node --import tsx --test --test-concurrency=1 test/*.test.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/scripts/migrate.ts",
    "db:backup": "tsx src/scripts/backup.ts",
    "clean": "rm -rf dist .turbo"
  },
  "dependencies": {
    "@agentim/shared": "workspace:*",
    "@hono/node-server": "^1.14.0",
    "@hono/node-ws": "^1.1.0",
    "hono": "^4.7.0",
    "drizzle-orm": "^0.39.0",
    "ioredis": "^5.4.0",
    "pg": "^8.13.0",
    "jose": "^6.0.0",
    "argon2": "^0.41.0",
    "ws": "^8.18.0",
    "nanoid": "^5.1.0"
  },
  "devDependencies": {
    "@types/pg": "^8.11.0",
    "@types/ws": "^8.5.0",
    "drizzle-kit": "^0.30.0",
    "tsx": "^4.19.0",
    "typescript": "^5.8.0"
  }
}
